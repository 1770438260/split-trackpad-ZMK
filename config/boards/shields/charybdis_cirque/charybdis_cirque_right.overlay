&pro_micro_spi {
    compatible = "nordic,nrf-spim";
    status = "okay";

    miso-pin = <24>; // P0.24
    mosi-pin = <9>; // P0.09
    sck-pin = <10>; // P0.10
    ss-pin = <13>; // P0.13

    trackpad: trackpad@2A {
        status = "okay";
        compatible = "cirque,pinnacle";
        reg = <0x2A>;
        label = "Cirque_Trackpad";
	dr-gpios = <&gpio1 6 GPIO_ACTIVE_HIGH>;// P1.06
        spi-max-frequency = <1000000>;
    };
};






